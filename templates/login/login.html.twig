{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path('app_login') }}" method="post">
		<div class="mb-3 mt-3">
			<label for="username" class="form-label m-2">Email :</label>
			<input type="email" class="form-control w-50 m-2 " id="username" name="_username" value="{{ last_username }}" aria-describedby="emailHelp">
			<div id="emailHelp" class="form-text m-2">We'll never share your email with anyone else.</div>
		</div>
		<div class="mb-3 mt-3">
			<label for="exampleInputPassword1" class="form-label m-2">Password</label>
			<input type="password" class="form-control w-50 m-2 " id="password" name="_password">
		</div>
		<button type="submit" class="btn btn-primary w-50 m-2">Login</button>
	</form>
{% endblock %}
